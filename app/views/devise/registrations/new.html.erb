<div class="synergy-new">
    <%= image_tag "synergylogo.png", :size => "220x35" %>
    <h6><%= t('.sign_up') %></h6>
</div>
<div class="panel-body">
<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= bootstrap_devise_error_messages! %>

  <div class="form-group">
    <i class="fas fa-envelope"></i>
    <%= f.email_field :email, autofocus: true, placeholder: 'E-mail', autocomplete: 'email', class: 'form-group', type: 'text' %>
  </div>

  <div class="form-group">
 <i class="fas fa-key"></i>
    <%= f.password_field :password, placeholder: 'Password', autocomplete: 'current-password', class: 'form-group', type: 'password' %>
</div>
<div class="form-group">
    <i class="fas fa-lock"></i>
    <%= f.password_field :password_confirmation, placeholder:'Re-Type Password', autocomplete: 'current-password', class: 'form-group', type: 'password' %>
    <% if @minimum_password_length %>
      <small class="form-text text-muted"><%= t('devise.shared.minimum_password_length', count: @minimum_password_length) %></small>
    <% end %>
  </div>


  

  <div class="form-group">
    <%= f.submit t('.sign_up'), class: 'btn btn-primary' %>
  </div>
<% end %>

<%= render 'devise/shared/links' %>
</div>
