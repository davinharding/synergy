  <div class="container">
  <%= form_with(model: @profile, local:true) do |form| %>
  <div class="form-group">
    <%= form.label :name %>
    <%= form.text_field :name %>
  </div>
  <div>
  <ul>
    <% @activities.each do |activity| %>
      <li>
      <% if @user_activities.include?(activity)%>
          <%= check_box_tag( "activity[]", activity.id, checked = true) %>         
      <% else %>
          <%= check_box_tag( "activity[]", activity.id, checked = false) %>
      <%end%>
      <%= activity.activity %>
      </li>
    <% end %>
    </ul>
  </div>
  <div class="form-group">
    <%= form.label :age %>
    <%= form.text_field :age %>
  </div>
  <div class="form-group">
    <%= form.label :location %>
    <%= form.text_field :location %>
  </div>
  <div class="form-group">
    <%= form.label :picture %>
    <%= form.text_field :picture %>
  </div>
  <div class="form-group">
    <%= form.label :gender %>
    <%= form.text_field :gender %>
  </div>
  <div class="form-group">
    <%= form.label :bio %>
    <%= form.text_field :bio %>
  </div>
  <%= form.hidden_field :user_id, value: current_user.id %>
    <%= submit_tag("Submit") %>
  <% end %>
</div>
